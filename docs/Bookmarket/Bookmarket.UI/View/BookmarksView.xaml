<UserControl x:Class="Bookmarket.UI.View.BookmarksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bookmarket.UI"
             mc:Ignorable="d" 
             d:DesignHeight="1150" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel>
            <GroupBox Header="S_earch"  Margin="6,0" Padding="0">
                <StackPanel Height="60">
                    <TextBox Text="{Binding FilterString}"
                                 DockPanel.Dock="Left"
                                 MinWidth="260"
                                 Height="27"
                                 HorizontalContentAlignment="Stretch"
                                 Name="SearchInput"
                                 KeyDown="SearchInput_KeyDown"
                                 TextAlignment="Justify" />
                    <StackPanel Margin="0 2" Orientation="Horizontal" >
                        <Button HorizontalAlignment="Left" Content="_Clear" Width="75" Click="ClearFilter_Click" Command="{Binding ClearFilterCommand}" />
                        <Button HorizontalAlignment="Left" Content="_JSON" Width="75" Click="ViewJson_Click" ToolTip="Open JSON File" />

                        <Button Width="75" Command="{Binding AddCommand}" Click="AddNewItem_Click">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Images/add.png" Height="18" Margin="0 0 5 0"/>
                                <TextBlock Text="Add"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <GroupBox Header="Import" Margin="6,0" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <Button Command="{Binding ImportJsonCommand}" HorizontalAlignment="Left" Content="Import JSON" Width="95" ToolTip="Import JSON" />
                        <Button Command="{Binding ImportHtmlCommand}" HorizontalAlignment="Left" Content="Import HTML" Width="95" ToolTip="Import HTML" />
                    </StackPanel>
                    <DockPanel Grid.Row="1">
                        <TextBox Text="{Binding ImportString}"
                                 DockPanel.Dock="Left"
                                 Width="Auto"
                                 Height="290"
                                 HorizontalContentAlignment="Stretch"
                                 TextAlignment="Justify" />
                    </DockPanel>
                </Grid>


            </GroupBox>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <GroupBox Header="Output" Margin="6,0" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <Button HorizontalAlignment="Left" Content="Clear" Width="95" ToolTip="Clear Output" Command="{Binding ClearOutputCommand}" />
                    </StackPanel>
                    <DockPanel Grid.Row="1">
                        <TextBox Text="{Binding OutputString}"
                                 DockPanel.Dock="Left"
                                 Width="Auto"
                                 Height="240"
                                 HorizontalContentAlignment="Stretch"
                                 TextAlignment="Justify" />
                    </DockPanel>
                </Grid>
            </GroupBox>
        </StackPanel>

    </Grid>
</UserControl>
